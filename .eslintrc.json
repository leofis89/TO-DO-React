{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "prettier"
    ],
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/destructuring-assignment": false,
        "react/prop-types": [
            "enabled",
            {
                "ignore": "ignore",
                "customValidators": "customValidator"
            }
        ],
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "global-require": "off",
        "import/prefer-default-export": "off",
        "no-unused-expressions": [
            "error",
            {
                "allowTaggedTemplates": true
            }
        ]
    }
}